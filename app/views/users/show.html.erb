<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>

      <h2>投稿数の前日比・前週比</h2>
        <% @today_books = instance_variable_get(:@today_books) %>
        <% @yesterday_books = instance_variable_get(:@yesterday_books) %>
        <%= render "day", today_books: @today_books, yesterday_books: @yesterday_books %>
        
        <% @this_week_books = instance_variable_get(:@this_week_books) %>
        <% @last_week_books = instance_variable_get(:@last_week_books) %>
        <%= render "week", this_week_books: @this_week_books, last_week_books: @last_week_books %>

    </div>
  </div>
</div>
