<canvas id="bookChart"></canvas>

<script>
  const ctx= document.getElementById('bookChart');

  new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['6日前','5日前','4日前','3日前','2日前','1日前','今日'],
      datasets: [{
        label: '投稿した本の数',
        data: <%= @this_week_book_counts %>,
        borderColor: 'blue',
      }]
    },
    options: {
      plugins: {
        title: {
          display: true,
          text: '７日間の本の投稿数'
        }
      },
      y: {
        min: 0,
        max: 10,
      },
    },
  });
</script>